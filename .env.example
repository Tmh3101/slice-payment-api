# Example environment variables for Slice Payment API

# Server
PORT=3000
NODE_ENV=production

# Database (Supabase URL)
# Use the Supabase connection string (postgres://...)
DATABASE_URL=postgres://user:password@db.host:5432/dbname
DB_SCHEMA=public

# DnPay service credentials
DNPAY_API_URL=https://api.dnpay.example
DNPAY_API_KEY=your_dnpay_api_key
DNPAY_API_SECRET=your_dnpay_api_secret
DNPAY_WEBHOOK_SECRET=your_webhook_secret

# Private account for on-chain operations
ADMIN_PRIVATE_KEY=0x...

# Optional
LOG_LEVEL=info
