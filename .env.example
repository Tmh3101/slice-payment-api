# Example environment variables for Slice Payment API

# Server
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# Database (Supabase URL)
# Use the Supabase connection string (postgres://...)
DATABASE_URL=postgresql://user:password@host.supabase.com:6543/postgres
DB_SCHEMA=public

# Redis (for token price caching)
REDIS_HOST=localhost
REDIS_PORT=6379
# For Docker deployment, use: REDIS_HOST=redis

# Moralis API (for token price fetching)
MORIALIS_API_KEY=your_moralis_api_key_here

# Token limits
MAX_TOKEN_PER_PAYMENT=1000

# DNPay service credentials
DNPAY_API_URL=https://api.dnpay.example
DNPAY_PARTNER_ID=your_partner_id
DNPAY_API_KEY=your_dnpay_api_key
DNPAY_API_SECRET=your_dnpay_api_secret
DNPAY_WEBHOOK_SECRET=your_webhook_secret

# Private account for on-chain operations
ADMIN_PRIVATE_KEY=0x...
